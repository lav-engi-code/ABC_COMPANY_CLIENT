@page "/"
@layout Layout.LoginLayout
@using ABC_COMPANY_CLIENT.Modal
<PageTitle>Login</PageTitle>


<div class="d-flex align-items-center justify-content-center" style="height: 100vh;">
    <div class="row">
        <div class="col-lg-6 col-md-8 mx-auto">
            <div class="card border border-secondary shadow">
                <div class="card-body py-4 px-4 px-sm-5">
                    @* <div class="mb-3"><img src="/images/ace-logo.png" /></div> *@
                    <h4 class="text-center  flex-nowrap ">Welcome</h4>
                    <h6 class="text-center  flex-nowrap">Fill Your Detail</h6>
                    <div class="mt-3">
                        <EditForm Model="UserCheck" FormName="frmLoging" OnValidSubmit="ValidSubmit">
                            <DataAnnotationsValidator />
                            <ValidationSummary Model="UserCheck" />
                            @if (!string.IsNullOrEmpty(errorMessage))
                            {
                                <div class="alert alert-danger">@errorMessage</div>
                            }
                            <div class="row g-4">
                                <div class="col-12">
                                    <div class="form-floating">
                                        @* <input type="text" placeholder="User id" class="form-control mb-2" /> *@
                                        <InputText @bind-Value="UserCheck.userId" class="form-control" placeholder="User Name"></InputText>
                                        <label for="UserCheck!.userId">User Name</label>
                                        <ValidationMessage For="@(() => UserCheck.userId)"></ValidationMessage>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating">
                                        @* <input type="password" placeholder="Password" class="form-control mb-2" /> *@
                                        <InputText @bind-Value="UserCheck.password" type="password" class="form-control" placeholder="Password"></InputText>
                                        <label for="UserCheck!.password">Password</label>
                                        <ValidationMessage For="@(() => UserCheck.password)"></ValidationMessage>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="d-grid gap-2">
                                        <button type="submit" " class="btn btn-block btn-primary btn-lg fw-medium">SIGN IN</button>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="form-check">
                                            <label class="form-check-label text-muted">
                                                <input type="checkbox" class="form-check-input">
                                                Keep me signed in
                                                <i class="input-helper"></i>
                                            </label>
                                        </div>
                                        <a href="#" class="auth-link text-black">Forgot password?</a>
                                    </div>
                                </div>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {

    private List<Management_Data> use = new();

    protected override async Task OnInitializedAsync()
    {

        use = await httpClient.GetFromJsonAsync<List<Management_Data>>("https://localhost:7268/user");
    }

    [SupplyParameterFromForm]

    private Management_Data UserCheck { get; set; } = new();

    private string errorMessage;
    private async Task ValidSubmit()
    {
        foreach (var s in use)
        {
            if (UserCheck.userId == s.userId && UserCheck.password == s.password)
            {
                Nav.NavigateTo("/home", true);
                return;
            }
            else
            {
                errorMessage = "Invalid username or password!";
            }
        }
    }
}


